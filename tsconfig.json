{
	"include": ["*","**/*","package.json"],
	"exclude": ["**/fixtures/*","media/**","examples/**","test-tap/fixture/report/edgecases/ast-syntax-error.cjs"],
	"references": [
		{ "path": "./test-d" },
		{ "path": "./test-tap" },
	],
	"compilerOptions": {
		"declarationDir": "types",
		"rootDirs": [
			"test",
			"test-d",
			"test-tap"
		],
		"composite": true,
		"types": ["@types/node"],
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"moduleResolution": "nodenext",
		"module": "esnext",
		"target": "ESNext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true
	}
}
