		"cli",
		"jest",
		"mocha",
		"tape",
		"tap",
		"qunit",
		"jasmine",
		"babel",
		"assert",
		"assertion",
		"promise",
		"promises",
		"async",
		"function",
		"await",
		"generator",
		"generators",
		"yield",
		"observable",
		"observables",
		"unit",
		"snapshot",
		"expect",
		"typescript"
	],
